<%= render 'shared/navbar' %>

<div class="container">
  <p><%= current_user.first_name %></p>
  <div class="container-img">
    <img src=<%= current_user.avatar_url.nil? ? "https://images.unsplash.com/photo-1489424731084-a5d8b219a5bb?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=214b5beac96f7d680a19b3836b28ccc3&auto=format&fit=crop&w=668&q=80" : current_user.avatar_url %> alt="profile" class="profile img-myprofile">
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

    <%= simple_form_for current_user, as: :user, url: edit_profile_path do |f| %>

    <div class="form-inputs">

      <%= f.error_notification %>


        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :avatar %>
        <%= f.input :avatar_cache, as: :hidden %>
        <%= f.submit "Enregistrer" %>

      <% end %>

    </div>

    </div>
  </div>
  <div>
    <a href='<%= destroy_user_session_path %>' class='log-out' data-method='delete'><%= t('.sign_out', default: 'Log out') %></a>
  </div>

</div>

<%= render '/shared/navigationbar' %>
