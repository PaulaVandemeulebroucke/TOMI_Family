<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div id="students-content2">
          <div class="back">
            <i class=" back fas fa-chevron-left" onclick="history.back(-1)"></i>
          </div>
          <div class="congtainer-logo-signup2" style="position: relative; top: 132px;">
            <%= image_tag("logo-entier.png", class: "logo2") %>
          </div>
          <p class="subtitle-students" style="position: relative; top: 165px;">Welcome back ! ðŸ˜Ž</p>

          <div class="container-signupstudents" style="top: 172px;">
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email, required: false, autofocus: true %>
                  <%= f.input :password, required: false %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Log in" %>
                </div>
              <% end %>

              <div style="position: relative; top: 23px; font-size: 14px;"><%= render "devise/shared/links" %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

