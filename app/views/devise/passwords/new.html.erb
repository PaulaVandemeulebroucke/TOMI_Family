<div id="students-content">
  <div class="back">
    <i class=" back fas fa-chevron-left" onclick="history.back(-1)"></i>
  </div>
  <div class="container-signupstudents">
    <div class="congtainer-logo-signup">
      <%= image_tag("logo-entier.png", class: "logo2") %>
    </div>

  </div>

  <div class="container-signupstudents">
    <p class="subtitle-students">Nous avons besoin de ton email pour te renvoyer ton mot de passe:</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Envoyer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>