  <div class="navbar-up-item">
    <i class=" back fas fa-chevron-left" onclick="history.back(-1)"></i>
    <a type="student-btn" href="/infos" class="btn btn-primary next-step-btn-medium">Revenir page infos <i class="fas fa-arrow-right arrow-next-step"></i></a>
  </div>
