<div id=<%= user.id %>>
  <div class="col-xs-12">
    <div class="card-network">
      <img src=<%= user.avatar_url ? user.avatar_url : "https://images.unsplash.com/photo-1511632765486-a01980e01a18?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=c0ff296c4f785350505c2b5545ae7393&auto=format&fit=crop&w=1650&q=80" %> alt="profile" class="profile img-network">
      <p class="name-user">
        <%= "#{user.first_name} #{user.last_name}" %>
        <span><%= "(#{user.city})" if user.city %></span>
      </p>
      <% if work %>
        <p class="desc-user">...a aussi liké le métier de <%= work %><%= " (et #{number} mêmes autres métiers)" if number && number > 0 %></p>
      <% end %>

      <% if user.requested_friends.include?(current_user) || user.pending_friends.include?(current_user) %>
        <i class="fas fa-plus plus-grey"></i>
      <% else %>
        <%= link_to request_friend_path(friendable: user.id, query: params[:query]), method: :post, remote: true do %>
          <i class="fas fa-plus plus-regular"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
