<div id=<%= user.id %>>
  <div class="col-xs-12">
    <div class="card-network">
      <img src=<%= user.avatar_url ? user.avatar_url : "https://images.unsplash.com/photo-1489424731084-a5d8b219a5bb?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=214b5beac96f7d680a19b3836b28ccc3&auto=format&fit=crop&w=668&q=80" %> alt="profile" class="profile img-network">
      <p class="name-user">
        <%= "#{user.first_name} #{user.last_name}" %>
        <span><%= "(#{user.city})" if user.city %></span>
      </p>
      <% if work %>
        <p class="desc-user">...a aussi liké le métier de <%= work %> <%= @commun_jobs_results.count %></p>
      <% end %>

      <% if user.requested_friends.include?(current_user) || user.pending_friends.include?(current_user) %>
        <i class="fas fa-plus plus-grey"></i>
      <% else %>
        <%= link_to request_friend_path(friendable: user.id, query: params[:query]), method: :post, remote: true do %>
          <i class="fas fa-plus plus-regular"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
