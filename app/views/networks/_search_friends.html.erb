<form id="live-search-form-friends" method="get" action="<%= search_friends_path %>">
  <input id="big-search-box-friends" name="query" type="text" placeholder="Recherche un de tes contacts ici..."/>

</form>


<script type="text/javascript">

  $("#live-search-form-friends").on("keyup", function() {

  var form = $("#live-search-form-friends");

  var url = "/search_friends";
  var formData = form.serialize();
  $.get(url, formData, function(html) {

    $("#users_all").html(html);

  });

});
</script>
