<%= render 'shared/navbar' %>
  <%# if current_user.first_name.nil? %>

  <%# else %>
  <div class="navbar-onglet">
    <div class="navbar-onglet-item row">
      <a class="col-xs-4 col-xs-offset-2 col-md-3 col-md-offset-3 active" href="/network"><i class="fas fa-user-plus"></i></a>
      <a class="col-xs-4 col-md-3" href="/messenger"><i class="far fa-envelope"></i></a>
    </div>
  </div>

  <div class="container-homepage">
    <h2 class="title-network">Suggestion de contacts:</h2>
    <div class="cards-homepage">
      <div class="row row-homepage">
        <% @users.sample(5).each do |user| %>
          <div class="col-xs-12">
            <div class="card-network">
              <img src="https://images.unsplash.com/photo-1489424731084-a5d8b219a5bb?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=214b5beac96f7d680a19b3836b28ccc3&auto=format&fit=crop&w=668&q=80" alt="profile" class="profile img-network">
              <p class="name-user"><%= user.email.first(20) %></p>
              <p class="desc-user">...a aussi liké le métier de pilote d'avion</p>
              <% if user.pending_friends %>
                <i class="fas fa-plus plus-grey"></i>
              <% else %>
                <%= link_to send_friend_request_path(friendable: user.id) do %>
                  <i class="fas fa-plus plus-regular"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="searchbar">
    <%= form_tag  network_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Pour rechercher un étudiant c'est ici..."
      %>
    <% end %>
  </div>
